{% extends 'admin/base.html.twig' %}

{% block title %}
	{% if product.id %}
	{% trans %}Product Edit{% endtrans %} - {{ product.name }}
	{% else %}
	{% trans %}Product Add{% endtrans %}
	{% endif %}
{% endblock %}

{% block body %}

<ol class="breadcrumb">
	<li class="breadcrumb-item">
		<a href="{{ path('admin_dashboard') }}">{% trans %}Dashboard{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{ path('admin_product') }}">{% trans %}Manager Products{% endtrans %}</a>
	</li>	
	<li class="breadcrumb-item active">
	{% if product.id %}
	{% trans %}Product Edit{% endtrans %} - {{ product.name }}
	{% else %}
	{% trans %}Product Add{% endtrans %}
	{% endif %}
	</li>
</ol>

<div class="mb-3">
	{{ include('blocks/message.html.twig') }}
	{{ form(form) }}
</div>
{% endblock %}
