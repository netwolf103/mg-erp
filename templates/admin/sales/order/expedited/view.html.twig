{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Expedited Detail{% endtrans %}{% endblock %}

{% block body %}
<ol class="breadcrumb">
	<li class="breadcrumb-item">
		<a href="{{ path('admin_dashboard') }}">{% trans %}Dashboard{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{ path('admin_sales_order') }}">{% trans %}Manager Orders{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{ path('admin_sales_order_expedited') }}">{% trans %}Expedited Order{% endtrans %}</a>
	</li>		
	<li class="breadcrumb-item active">{% trans %}Expedited Detail{% endtrans %}</li>
</ol>

<div class="mb-3">
	{{ include('blocks/message.html.twig') }}
	<div class="row">
		<div class="col-sm-12">
			<div class="card mb-2">
				<div class="card-header">
					Order # <a href="{{ path('admin_sales_order_view', {'id': expedited.getParent().id}) }}">{{ expedited.getParent().getIncrementId }}</a>
				</div>
				<div class="card-body">
					<span class="d-block"><strong>{% trans %}Expedited Date{% endtrans %}</strong>: {{ expedited.createdAt|date('Y-m-d H:i:s') }}</span>
					<span class="d-block"><strong>{% trans %}Expedited Creator{% endtrans %}</strong>: {{ expedited.getCreator().Fullname() }}</span>
					<span class="d-block"><strong>{% trans %}Comment{% endtrans %}</strong>: {{ expedited.comment }}</span>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}