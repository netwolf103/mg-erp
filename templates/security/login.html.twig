{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in{% endtrans %}{% endblock %}

{% block stylesheets %}
<link href="{{ asset('skin/default/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
<link href="{{ asset('skin/default/css/sb-admin.css') }}" rel="stylesheet">
<link href="{{ asset('skin/default/css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">{% trans %}Login{% endtrans %}</div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}    
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                        <label for="inputEmail">{% trans %}Username{% endtrans %}</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                        <label for="inputPassword">{% trans %}Password{% endtrans %}</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label><input type="checkbox" name="_remember_me"> {% trans %}Remember Password{% endtrans %}</label>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-primary btn-block" type="submit">{% trans %}Login{% endtrans %}</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
